@{
    ViewData["Title"] = "آلة حاسبة بسيطة";
}

<style>
    body {
        background-color: #f5f5f5;
        font-family: Arial, sans-serif;
        font-size: 16px;
    }

    h1 {
        color: #333;
        text-align: center;
    }

    form {
        margin: 0 auto;
        width: 300px;
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    label {
        display: block;
        margin-bottom: 10px;
        color: #333;
    }

    input[type="number"], select {
        width: 100%;
        padding: 5px 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 3px;
        box-sizing: border-box;
    }

    button[type="submit"] {
        display: block;
        margin: 0 auto;
        padding: 10px 20px;
        background-color: #4CAF50;
        color: #fff;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }

   #result {
        font-size: 24px;
        color: #dc3545;
        margin-top: 20px;
        text-align: center;
    }

</style>

<h1 dir="rtl">@ViewData["Title"]</h1>

<form asp-controller="Home" asp-action="Calcuter" method="post" dir="rtl">
    <label for="num1">ادخل الرقم الأول:</label>
    <input type="number" id="num1" name="num1">

    <label for="num2">ادخل الرقم الثاني:</label>
    <input type="number" id="num2" name="num2">

    <label for="operation">اختر العملية:</label>
    <select id="operation" name="operation">
        <option value="add">الجمع</option>
        <option value="subtract">الطرح</option>
        <option value="multiply">الضرب</option>
        <option value="divide">القسمة</option>
    </select>

    <button type="submit">حساب</button>

</form> 
<p id="result"> النتيجة: @ViewBag.Result </p>